upstream django {
	server unix:/var/www/django/run/uwsgi.sock;
}

server {
	listen 80 default_server;
	listen [::]:80 default_server;
	
	charset utf-8;
	
	server_name _;
	
	location / {
		include /etc/nginx/uwsgi_params;
		uwsgi_pass django;
	}

    	location ~ \.png {
        	root /var/www/images;
    	}
}
